rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {	  
    match /allowedEmails/{email} {
    	allow read: 
      	if true;
      allow write:
      	if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  	match /cars {
    	allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /reservations {
    	allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth != null;
    }
    match /settings {
    	allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /users {
    	allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    match /users/{user} {
    	allow read: 
      	if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || request.auth.uid == user;
      allow write:
      	if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'  || request.auth.uid == user;
    }
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.suspended != true;
    }
  }
}